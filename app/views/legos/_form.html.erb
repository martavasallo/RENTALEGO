<%= simple_form_for(@lego, html: { class: 'form' }) do |f| %>
  <%= f.input :title, label: 'Title', input_html: { class: 'form-control' } %>
  <%= f.input :description, label: 'Description', input_html: { class: 'form-control' } %>
  <%= f.input :price, label: 'Price', input_html: { class: 'form-control' } %>
  <%= f.input :location, label: 'Location', input_html: { class: 'form-control' } %>
  <%= f.input :photo, as: :file, label: 'Photo', input_html: { class: 'form-control' } %>
  <%= f.button :submit, 'Submit', class: 'btn btn-primary btn-block' %>
<% end %>

