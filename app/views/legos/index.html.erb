<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>List of Legos</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @query %>
        <p>You searched for <strong><%= @query %></strong>. We found <%= @legos.count %> legos out of our <%= Lego.count %> on our website.</p>
      <% else %>
        <p>All <%= Lego.count %> legos.</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @legos.each do |lego| %>
      <div class="col-md-4">
        <div class="lego-card">
          <div class="lego-card-image" ></div>
            <% if lego.photo.attached? %>
              <%= cl_image_tag lego.photo.key, height: 300, width: 400, crop: :fill %>
            <% end %>
          <div class="lego-card-content">
            <div class="lego-card-title">
              <h4><%= lego.title %></h4>
            </div>
            <p><%= lego.location %></p>
            <div class="flex">
              <div class="flex align-items-center">
                <i class="fa-solid fa-people-line"></i>
                <span><%= lego.description %></span>
              </div>
              <div class="flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span><%= lego.price %></span>
              </div>
            </div>
          </div>
          <div class="lego-card-actions">
            <%= link_to "More info", lego_path(lego) %>
            <%# link_to "Edit", edit_lego_path(lego), class: "ms-3 text-warning" %>
            <%# link_to "Remove", lego_path(lego),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "ms-3 text-danger"
            %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
