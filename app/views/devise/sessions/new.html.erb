<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="signin-card card">
        <div class="card-body">
          <h2 class="card-title">Log in</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
            <div class="mb-3">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: 'email', class: 'form-control', placeholder: 'Email' } %>
                          <p class="fw-lighter fst-italic" style="color: gray; font-size: 12px">You can use: marta@gmail.com</p>
            </div>
            <div class="mb-3">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: 'current-password', class: 'form-control', placeholder: 'Password' } %>
                          <p class="fw-lighter fst-italic" style="color: gray; font-size: 12px">You can use: secret</p>
            </div>
            <div class="mb-3 form-check">
              <%= f.input :remember_me, as: :boolean, label: 'Remember me', input_html: { class: 'form-check-input' } if devise_mapping.rememberable? %>
            </div>
            <div class="d-grid gap-2">
              <%= f.button :submit, 'Log in', class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>

          <br>
          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
