<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="signup-card">
        <div class="card-body">
          <h2 class="card-title">Sign up</h2>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
            <%= f.error_notification %>

            <div class="mb-3">
              <%= f.input :username,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: 'username', class: 'form-control', placeholder: 'Username' } %>
            </div>
            <div class="mb-3">
              <%= f.input :bio,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: 'bio', class: 'form-control', placeholder: 'Bio' } %>
            </div>
            <div class="mb-3">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: 'email', class: 'form-control', placeholder: 'Email' } %>
            </div>
            <div class="mb-3">
              <%= f.input :password,
                          required: true,
                          hint: (@minimum_password_length ? "#{@minimum_password_length} characters minimum" : nil),
                          input_html: { autocomplete: 'new-password', class: 'form-control', placeholder: 'Password' } %>
            </div>
            <div class="mb-3">
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: 'new-password', class: 'form-control', placeholder: 'Confirm Password' } %>
            </div>
            <div class="mb-3">
              <%= f.input :photo, as: :file, class: 'form-control', placeholder: 'Choose Photo' %>
            </div>
            <div class="d-grid gap-2">
              <%= f.button :submit, 'Sign up', class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
